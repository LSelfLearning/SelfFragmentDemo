<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#4285f4</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Devider">
        <item name="android:layout_height">@dimen/y1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/gray_devide</item>
    </style>
    <style name="CellIcon">
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_height">@dimen/y44</item>
        <item name="android:layout_width">@dimen/x44</item>
        <item name="android:layout_marginRight">@dimen/x30</item>
    </style>
    <style name="VerifyButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_verify_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x30</item>
        <item name="android:layout_height">@dimen/y60</item>
        <item name="android:layout_width">@dimen/x180</item>
    </style>
    <style name="RoundButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_blue_round_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/x32</item>
    </style>
    <style name="FullRoundButton" parent="RoundButton">
        <item name="android:layout_marginLeft">@dimen/x30</item>
        <item name="android:layout_marginRight">@dimen/x30</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--自定义dialog背景全透明无边框theme -->
    <style name="MyDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
